<div class="col-10 col-sm-5 col-lg-3">
  <div class="card" data-id="<%= entry.id %>">
    <img src="img/Chiitan car.jpg" alt="" class="card-img-top:srcset"></img>
    <div class="card-body">
      <h5 class="card-title"><%= entry.title %></h5>
      <p class="card-text"><%= entry.description %></p>
      <div class="buttons row-cols-2 gap-2">
        <a href="/edit/<%= entry.id %>" class="btn btn-outline-warning">
          <i class="bi bi-pencil-square"></i>
        </a>
        <form action="/remove/<%= entry.id %>" method="POST" onclick="event.stopPropagation()">
          <button type="submit" class="btn btn-outline-danger">
            <i class="bi bi-trash"></i>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>